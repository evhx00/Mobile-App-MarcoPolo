<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MarcoPolo" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/cute_blue</item>
        <item name="colorPrimaryVariant">@color/cute_purple</item>
        <item name="colorOnPrimary">@color/cute_purple</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="cuteToast" parent="TextAppearance.AppCompat">
        <item name="textColor">@color/cute_purple</item>
        <item name="textSize">18dp</item>
        <item name="colorBackground">@color/cute_blue</item>
        <item name="length">SHORT</item>
        <item name="android:shadowColor">@color/cute_purple</item>
        <item name="android:shadowRadius">2.75</item>
    </style>
</resources>